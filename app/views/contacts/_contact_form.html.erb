<ul class="ui-form">	
	<li>
		<%= label(:contact, :name, "Name" )%>
		<%= text_field(:contact, :name, :class => "text required" ) %>
	</li>
	<li>
		<%= label(:contact, :phone, "Phone") %> 
		<%= text_field(:contact, :phone, :id => "email_primary" ) %> 
		<%= hidden_field(:contact, :user_id, :value => current_user.id) %>
	</li>	
	<li>
		<%= label(:contact, :email, "Email") %> 
		<%= text_field(:contact, :email, :id => "email_primary" ) %> 
	</li>	
</ul>